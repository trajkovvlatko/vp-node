#!/usr/bin/env node

const {exec} = require('child_process');

const command = `DATABASE_URL=postgres://${process.env.POSTGRES_USER}:${process.env.POSTGRES_PASSWORD}@${process.env.POSTGRES_HOST}:${process.env.POSTGRES_PORT}/${process.env.DATABASE} NODE_ENV=development ./node_modules/node-pg-migrate/bin/node-pg-migrate up`;

console.log("-------- MIGRATE UP --------");
console.log(command);

exec(command, (error, stdout, stderr) => {
  if (error) {
    console.log(`error: ${error.message}`);
    return;
  }
  if (stderr) {
    console.log(`stderr: ${stderr}`);
    return;
  }
  console.log(`stdout: ${stdout}`);
});
